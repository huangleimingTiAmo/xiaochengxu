<scroll-view scroll-y="ture">
  <view class='meta'>
  
    <image class='poster' src='{{movie.image.large}}'></image>
    <text class='title'>{{movie.title}}{{movie.year}}</text>
    <text class='info'>评分：{{movie.rating.average}}</text>
    <text class='info'>导演:<text wx:for="{{movie.directors}}">{{item.name}}</text></text>
    <text class='info'>主演:<text wx:for="{{movie.casts}}">{{item.name}}</text></text>
    

  </view>
  <view class='summary'>
    <text class='label'>摘要</text>
    <text class='content'>{{movie.summary}}</text>
  
  </view>

</scroll-view>